{
  "name": "functions",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "lint:fix": "eslint --ext .js,.ts . --fix",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:critical": "jest --testPathPattern='(prompts|streamingServer|agent)'",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "type-check": "tsc --noEmit",
    "validate": "npm run type-check && npm run lint && npm run test:ci",
    "seed:bagrut": "npx ts-node src/scripts/seedBagrutContent.ts",
    "generate:bagrut": "npx ts-node src/scripts/generateBagrutQuestions.ts",
    "seed:bagrut:full": "npx ts-node src/scripts/comprehensiveBagrutSeeder.ts",
    "seed:bagrut:resume": "npx ts-node src/scripts/comprehensiveBagrutSeeder.ts --resume",
    "seed:bagrut:dry-run": "npx ts-node src/scripts/comprehensiveBagrutSeeder.ts --dry-run",
    "seed:bagrut:civics": "npx ts-node src/scripts/comprehensiveBagrutSeeder.ts --subject=civics",
    "seed:bagrut:literature": "npx ts-node src/scripts/comprehensiveBagrutSeeder.ts --subject=literature",
    "seed:bagrut:bible": "npx ts-node src/scripts/comprehensiveBagrutSeeder.ts --subject=bible",
    "seed:bagrut:hebrew": "npx ts-node src/scripts/comprehensiveBagrutSeeder.ts --subject=hebrew",
    "seed:bagrut:english": "npx ts-node src/scripts/comprehensiveBagrutSeeder.ts --subject=english",
    "seed:bagrut:history": "npx ts-node src/scripts/comprehensiveBagrutSeeder.ts --subject=history",
    "seed:bagrut:status": "npx ts-node src/scripts/checkBagrutProgress.ts"
  },
  "engines": {
    "node": "22"
  },
  "main": "lib/functions/src/index.js",
  "dependencies": {
    "@google-cloud/vertexai": "^1.10.0",
    "@google/genai": "^1.35.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.21.0",
    "firebase-admin": "^13.6.0",
    "firebase-functions": "^7.0.2",
    "idb": "^8.0.3",
    "openai": "^6.15.0",
    "pdf-lib": "^1.17.1",
    "pdf-parse": "^1.1.4",
    "pdf2pic": "^3.2.0",
    "rate-limiter-flexible": "^5.0.5",
    "uuid": "^13.0.0",
    "youtube-transcript": "^1.2.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^3.4.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.7.3"
  },
  "private": true
}
