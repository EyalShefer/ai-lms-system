{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "outDir": "lib",
    "sourceMap": true,
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "target": "es2018",
    "esModuleInterop": true,
    "lib": [
      "es2018"
    ]
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}